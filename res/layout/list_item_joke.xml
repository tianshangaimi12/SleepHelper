<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:layout_margin="5dp"
    android:background="#1296db">
    <ImageView 
        android:id="@+id/img_joke_person"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:scaleType="fitXY"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"/>
    <TextView 
        android:id="@+id/txt_joke_person"
        android:layout_alignTop="@+id/img_joke_person"
        android:layout_toRightOf="@+id/img_joke_person"
        android:layout_marginLeft="10dp"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView 
        android:id="@+id/txt_joke_content"
        android:layout_alignLeft="@+id/txt_joke_person"
        android:layout_below="@+id/txt_joke_person"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="#dddddd"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"/>

</RelativeLayout>
